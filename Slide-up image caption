<script type='text/javascript'>

$(document).ready(function(){
   $('.boxgrid.captionfull').hover(function(){
      $(".cover", this).stop().animate({bottom:'0'},{queue:false,duration:160});
   }, function() {
      $(".cover", this).stop().animate({bottom:'-58px'},{queue:false,duration:160});
   });
</script>




HTML
===============================================

<ul>
   <li>
      <a class="boxgrid captionfull">
         <img src="" width="" height="" alt="" />
         <span class="cover boxcaption">
            Caption text
         </span>
      </a>
   </li>
   <li>
      <a class="boxgrid captionfull">
         <img src="" width="" height="" alt="" />
         <span class="cover boxcaption">
            Caption text
         </span>
      </a>
   </li>
</ul>
